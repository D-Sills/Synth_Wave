-- splash_screen.script

local SPLASH_DURATION = 3  -- Duration in seconds

function init(self)
    self.timer = SPLASH_DURATION
end

function update(self, dt)
    self.timer = self.timer - dt
    if self.timer <= 0 then
        -- Transition to the title screen or the next scene
        msg.post("main:/main_menu#gui", "enable")  -- Replace with your title screen URL
        msg.post(".", "disable")
    end
end
